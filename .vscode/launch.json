{
   // Use IntelliSense to find out which attributes exist for C# debugging
   // Use hover for the description of the existing attributes
   // For further information visit https://github.com/OmniSharp/omnisharp-vscode/blob/master/debugger-launchjson.md
   "version": "0.2.0",
   "configurations": [
        {
            "name": "skiwebapi Launch",
            "type": "coreclr",
            "request": "launch",
        //    "preLaunchTask": "dotenv",
            "requireExactSource": false,
            "program": "${workspaceFolder}/SlalomTracker.WebApi/bin/Debug/netcoreapp3.1/SlalomTracker.WebApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SlalomTracker.WebApi",
            "stopAtEntry": false,
            "launchBrowser": {
                "enabled": false
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "envFile": "${workspaceFolder}/.env"           
        },
        {
            "name": "skiwebapi Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [ "exec", "-i", "ski-web" ],
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeCwd": "${workspaceRoot}",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/ski": "${workspaceRoot}/"
            }
        },        
        {
            "name": "skiconsole Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickRemoteProcess}",
            "pipeTransport": {
                "pipeProgram": "docker",
                "pipeArgs": [ "exec", "-i", "ski-console" ],
                "debuggerPath": "/vsdbg/vsdbg",
                "pipeCwd": "${workspaceRoot}",
                "quoteArgs": false
            },
            "sourceFileMap": {
                "/ski": "${workspaceRoot}/"
            }
        }
    ,]
}